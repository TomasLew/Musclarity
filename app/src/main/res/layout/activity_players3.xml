<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/players2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayersActivity2"
    android:background="@drawable/futbolpitch2">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/my_background7"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-109dp" />

    <ImageView
        android:id="@+id/back_button"
        android:padding="2dp"
        android:layout_width="60dp"
        android:layout_height="40dp"

        android:background="@drawable/arrow_bg"
        android:importantForAccessibility="no"
        android:src="@drawable/arrow"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/Logo"
        app:layout_constraintBottom_toBottomOf="@id/Logo" />

    <TextView
        android:id="@+id/player_img_input"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/text_input_background"
        android:fontFamily="@font/montserrat"
        android:padding="5dp"
        android:selectAllOnFocus="true"
        android:text="Add New Player Image"
        android:textColor="@color/grey_hint"
        android:textSize="8pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/position_spinner" />

    <EditText
        android:id="@+id/player_name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="176dp"
        android:background="@drawable/text_input_background"
        android:fontFamily="@font/montserrat"
        android:hint="@string/name"
        android:inputType="text"
        android:padding="5dp"
        android:selectAllOnFocus="true"
        android:textColor="@color/white"
        android:textColorHighlight="@color/grey"
        android:textColorHint="@color/grey_hint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Logo" />

    <Spinner
        android:id="@+id/position_spinner"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/text_input_background"
        android:fontFamily="@font/montserrat"
        android:paddingVertical="5dp"
        android:popupBackground="@drawable/text_input_background"
        android:spinnerMode="dropdown"
        android:textColor="@color/white"
        android:textColorHighlight="@color/grey"
        android:textColorHint="@color/grey_hint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/player_name" />

    <Button
        android:id="@+id/add_button"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="152dp"
        android:backgroundTint="@color/logoColor"
        android:enabled="true"
        android:fontFamily="@font/montserrat"
        android:text="Add"
        android:textColor="@color/myBackgroundColor"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.546"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/player_img_input" />

    <Button
        android:id="@+id/edit_button"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="44dp"
        android:layout_marginTop="152dp"
        android:backgroundTint="@color/logoColor"
        android:enabled="true"
        android:fontFamily="@font/montserrat"
        android:text="Save"
        android:textColor="@color/myBackgroundColor"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/add_button"
        app:layout_constraintTop_toBottomOf="@id/player_img_input" />

    <Button
        android:id="@+id/delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="152dp"
        android:layout_marginEnd="44dp"
        android:backgroundTint="@color/logoColor"
        android:enabled="true"
        android:fontFamily="@font/montserrat"
        android:text="Delete"
        android:textColor="@color/myBackgroundColor"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@id/add_button"
        app:layout_constraintTop_toBottomOf="@id/player_img_input" />

    <ImageView
        android:id="@+id/player_img"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintEnd_toStartOf="@id/upload_button"
        app:layout_constraintTop_toTopOf="@id/upload_button"
        app:layout_constraintBottom_toBottomOf="@id/upload_button"
        />


    <TextView
        android:id="@+id/upload_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/plus"
        android:textSize="13pt"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textAlignment="center"
        android:paddingHorizontal="6dp"
        android:layout_marginEnd="6dp"

        app:layout_constraintTop_toTopOf="@id/player_img_input"
        app:layout_constraintBottom_toBottomOf="@id/player_img_input"
        app:layout_constraintEnd_toEndOf="@id/player_img_input"
        />


    <ImageView
        android:id="@+id/Logo"
        android:alpha="0.75"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="40dp"
        android:importantForAccessibility="no"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/m_logo" />

    <ImageView
        android:id="@+id/imagen"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toTopOf="@+id/player_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Logo"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/joseboton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        app:layout_constraintBottom_toTopOf="@+id/add_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player_img_input" />


</androidx.constraintlayout.widget.ConstraintLayout>