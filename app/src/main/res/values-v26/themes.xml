<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SpinnerTextViewItem" parent="@android:style/Widget.TextView">
        <item name="android:textSize" >18sp</item>
        <item name="android:textStyle" >normal</item>
        <item name="android:textColor" >@color/logoColor</item>
        <item name="android:letterSpacing" >0.2</item>
        <item name="android:dividerPadding" >5dp</item>
        <item name="android:paddingHorizontal" >3dp</item>
    </style>
    <style name="SpinnerPositionHint" parent="@android:style/Widget.TextView" >
        <item name="android:textSize" >8pt</item>
        <item name="android:textStyle" >normal</item>
        <item name="android:textColor" >@color/grey_hint</item>
        <item name="android:fontFamily" >@font/montserrat</item>
        <item name="android:dividerPadding" >15dp</item>
        <item name="android:paddingHorizontal" >5dp</item>
    </style>
    <style name="SpinnerPositionItem" parent="@android:style/Widget.TextView" >
        <item name="android:textSize" >8pt</item>
        <item name="android:textStyle" >normal</item>
        <item name="android:textColor" >@color/white</item>
        <item name="android:fontFamily" >@font/montserrat</item>
        <item name="android:dividerPadding" >15dp</item>
        <item name="android:paddingHorizontal" >5dp</item>
    </style>
</resources>